<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Description>Tambala is a drum patteren and song generator</Description>
    <Company>Restless Animal Development</Company>
    <Product>Tambala</Product>
    <Copyright>2022 Restless Animal Development</Copyright>
    <RootNamespace>Restless.Tambala</RootNamespace>
    <PackageProjectUrl>https://github.com/victor-david/tambala</PackageProjectUrl>
    <RepositoryUrl>https://github.com/victor-david/tanbala</RepositoryUrl>    
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <Version>4.0.0</Version>
    <ApplicationIcon>App.Icon.128.ico</ApplicationIcon>    
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Restless.Toolkit" Version="2.5.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Tambala.Controls\Tambala.Controls.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\Image.Add.Layout.64.png" />
    <Resource Include="Resources\Images\Image.Drum.Blue.128.png" />
    <Resource Include="Resources\Images\Image.Drum.Red.128.png" />
    <Resource Include="Resources\Images\Image.DrumSet.128.png" />
    <Resource Include="Resources\Images\Image.Open.Layout.64.png" />
    <Resource Include="Resources\Images\Image.Save.Layout.64.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
 

</Project>

