<con:ApplicationWindow 
    x:Class="Restless.App.Tambala.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.App.Tambala.Controls;assembly=Tambala.Controls"
    xmlns:vw="clr-namespace:Restless.App.Tambala.View"
    xmlns:vm="clr-namespace:Restless.App.Tambala.ViewModel"
    Background="{StaticResource WindowBackgroundBrush}"
    Topmost="{Binding IsTopMost}"
    Title="{Binding DisplayName}">
    <Window.Resources>
        <!-- All other resources come via App.xaml -->
        <DataTemplate DataType="{x:Type vm:ProjectContainerViewModel}">
            <vw:ProjectContainerView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <vw:MainMenu/>
        <vw:MainNavigation Grid.Row="1"  Margin="2,4"/>
        <Separator Grid.Row="2"/>
        <ContentControl 
            Grid.Row="3" 
            Content="{Binding ProjectContainer}"
            Margin="6,0,6,6"/>
    </Grid>
</con:ApplicationWindow>
