<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.App.Tambala.Controls">

    <!-- ################################### -->
    <!-- DrumPatternPresenter Template/Style -->
    <!-- ################################### -->
    <ControlTemplate x:Key="DrumPatternPresenterControlTemplate" TargetType="con:DrumPatternPresenter">
        <ContentPresenter Content="{TemplateBinding VisualElement}"/>
    </ControlTemplate>

    <Style TargetType="con:DrumPatternPresenter">
        <Setter Property="Template" Value="{StaticResource DrumPatternPresenterControlTemplate}"/>
    </Style>

</ResourceDictionary>