<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.Tambala.Controls">

    <!-- ############################ -->
    <!-- SongPresenter Template/Style -->
    <!-- ############################ -->
    <ControlTemplate x:Key="SongPresenterControlTemplate" TargetType="con:SongPresenter">
        <ContentPresenter Content="{TemplateBinding VisualElement}"/>
    </ControlTemplate>
    
    <Style TargetType="con:SongPresenter">
        <Setter Property="Template" Value="{StaticResource SongPresenterControlTemplate}"/>
    </Style>
</ResourceDictionary>