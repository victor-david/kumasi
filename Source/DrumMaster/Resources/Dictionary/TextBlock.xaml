<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="TextBlockNavButton" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="11.5"/>
        <Setter Property="Foreground" Value="#FF003EE2" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TextBlockLabel" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="11.5"/>
        <Setter Property="Foreground" Value="{StaticResource TextBlockLabelBrush}" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

</ResourceDictionary>