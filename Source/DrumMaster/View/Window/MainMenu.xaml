<UserControl 
    x:Class="Restless.App.DrumMaster.View.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:r="clr-namespace:Restless.App.DrumMaster.Resources"
    mc:Ignorable="d" 
    d:DesignHeight="150" d:DesignWidth="800">
    <Menu KeyboardNavigation.TabNavigation="Cycle">
        <MenuItem Header="{x:Static r:Strings.MenuItemFile}">
            <MenuItem Header="{x:Static r:Strings.MenuItemNew}" Command="{Binding Commands[AddLayout]}" />
            <MenuItem Header="{x:Static r:Strings.MenuItemOpen}" Command="{Binding Commands[OpenLayout]}"/>
            <Separator/>
            <MenuItem Header="{x:Static r:Strings.MenuItemSave}" Command="{Binding Commands[SaveLayout]}" />
        </MenuItem>
    </Menu>
    
</UserControl>
