<con:ApplicationWindow 
    x:Class="Restless.App.DrumMaster.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.App.DrumMaster.Controls;assembly=DrumMaster.Controls"
    xmlns:vw="clr-namespace:Restless.App.DrumMaster.View"
    Background="{StaticResource WindowBackgroundBrush}"
    Topmost="{Binding IsTopMost}"
    Title="{Binding DisplayName}">
    <Window.Resources>
        <!-- All other resources come via App.xaml -->
        <ResourceDictionary Source="../../Resources/Dictionary/PageTemplate.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <vw:MainMenu/>
        <vw:MainNavigation Grid.Row="1"  Margin="2,4"/>
        <Separator Grid.Row="2"/>
        <ContentControl Grid.Row="3" Content="{Binding SongContainer}" Margin="6,0,6,6"/>
    </Grid>
</con:ApplicationWindow>
