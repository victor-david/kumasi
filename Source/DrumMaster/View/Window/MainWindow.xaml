<Window 
    x:Class="Restless.App.DrumMaster.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vw="clr-namespace:Restless.App.DrumMaster.View"
    Title="{Binding DisplayName}" Height="350" Width="525" Topmost="{Binding IsTopMost}">
    <Window.Resources>
        <!-- All other resources come via App.xaml -->
        <ResourceDictionary Source="../../Resources/Dictionary/PageTemplate.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <vw:MainNavigation Grid.Row="0"  Margin="2,4"/>
        <Separator Grid.Row="1"/>
        <ContentControl Grid.Row="2" Content="{Binding TrackContainer}" Margin="5"/>
    </Grid>
</Window>
