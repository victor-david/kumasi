<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.App.DrumMaster.Controls">

    <!-- ################################### -->
    <!-- DrumPatternContainer Template/Style -->
    <!-- ################################### -->
    <ControlTemplate x:Key="DrumPatternContainerControlTemplate" TargetType="con:DrumPatternContainer">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Controls for res / length etc here"/>
            <Border Grid.Row="1" Style="{DynamicResource HeaderBorder}">
                <TextBlock Text="{Binding ActivePattern.DisplayName, RelativeSource={RelativeSource TemplatedParent}}"/>
            </Border>


            
        </Grid>
    </ControlTemplate>

    <Style TargetType="con:DrumPatternContainer">
        <Setter Property="Template" Value="{StaticResource DrumPatternContainerControlTemplate}"/>
    </Style>

</ResourceDictionary>