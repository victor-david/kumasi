<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="clr-namespace:Restless.App.DrumMaster.Controls">

    <!-- ############################################ -->
    <!-- PATTERN COLLECTION CONTROL TEMPLATE / STYLE  -->
    <!-- ############################################ -->
    <ControlTemplate x:Key="SongPatternsContainerControlTemplate" TargetType="con:SongPatternsContainer">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Style="{DynamicResource HeaderBorder}">
                <TextBlock Text="Song Composition"/>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <!-- Gets populated in code  -->
                <Grid x:Name="PART_HostGrid"/>
            </ScrollViewer>
        </Grid>
    </ControlTemplate>
    
    <Style TargetType="con:SongPatternsContainer">
        <Setter Property="Template" Value="{StaticResource SongPatternsContainerControlTemplate}"/>
    </Style>
</ResourceDictionary>